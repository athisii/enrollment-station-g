<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.14-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cdac.enrollmentstation.controller.AdminAuthController">
    <top>
        <HBox styleClass="header">
            <ImageView preserveRatio="true">
                <Image url="@../img/navy_logo.png"/>
            </ImageView>
        </HBox>
    </top>
    <left>
        <!--  id: contMinHeightSmall!-> only used in fxml expression       -->
        <HBox fx:id="contMinHeightSmall" styleClass="container-min-height-small">
            <ImageView fitWidth="${contMinHeightSmall.minHeight}" fitHeight="${contMinHeightSmall.minHeight}"
                       preserveRatio="true">
                <Image url="@../gif/authentication.gif"/>
            </ImageView>
            <!--  id: bodyHeaderLabel!-> only used in fxml expression       -->
            <Label fx:id="bodyHeaderLabel" styleClass="container-min-height-small, press-effect, label-border-radius"
                   text="AUTHENTICATION"/>
        </HBox>
    </left>
    <right>
        <Region minWidth="${bodyHeaderLabel.width + contMinHeightSmall.minHeight}"/>
    </right>
    <center>
        <VBox styleClass="body" alignment="CENTER">
            <VBox styleClass="border-mark" alignment="CENTER">
                <VBox alignment="CENTER">
                    <Region styleClass="region-min-height-small"/>
                    <HBox alignment="CENTER">
                        <ImageView fitWidth="${contMinHeightSmall.minHeight}"
                                   fitHeight="${contMinHeightSmall.minHeight}"
                                   preserveRatio="true">
                            <Image url="@../img/username.png"/>
                        </ImageView>
                        <Region styleClass="region-min-width-small"/>
                        <TextField fx:id="username" styleClass="input-field" promptText="Username"
                                   focusTraversable="false"/>
                    </HBox>
                    <Region styleClass="region-min-height-large"/>
                    <HBox alignment="CENTER">
                        <ImageView fitWidth="${contMinHeightSmall.minHeight}"
                                   fitHeight="${contMinHeightSmall.minHeight}"
                                   preserveRatio="true">
                            <Image url="@../img/password.png"/>
                        </ImageView>
                        <Region styleClass="region-min-width-small"/>
                        <PasswordField fx:id="passwordField" styleClass="input-field" promptText="Password"
                                       focusTraversable="false"/>
                    </HBox>
                </VBox>
                <Region styleClass="region-min-height-small"/>
                <Label fx:id="statusMsg" styleClass="message-font-size"/>
            </VBox>
            <Region styleClass="region-min-height-large"/>
            <HBox alignment="CENTER">
                <Button fx:id="backBtn" styleClass="btn-medium, press-effect" onAction="#showHome" text="BACK"/>
                <Region styleClass="region-min-width-medium"/>
                <Button fx:id="loginBtn" styleClass="btn-medium, press-effect" onAction="#serverConfig" text="LOGIN"/>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox styleClass="footer">
            <Label fx:id="version"/>
        </HBox>
    </bottom>
</BorderPane>
